@model AirsoftApplication.Web.ViewModels.Images.InputImageViewModel

<form asp-action="UploadProfileImage" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Files" class="form-label">Select a photo</label>
        <input asp-for="Files" class="form-control" type="file" id="formFileMultiple">
        <span asp-validation-for="Files" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Set profile image" class="btn btn-primary" />
    </div>
</form>