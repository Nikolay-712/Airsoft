@model IEnumerable<AirsoftApplication.Web.ViewModels.Images.ImageViewModel>

<h4><a asp-controller="Home" asp-action="Index" class="link-primary">Home</a>/<a asp-controller="Team" asp-action="Events" class="link-primary">Events</a>/Gallery</h4>
@{
    ViewData["Title"] = "Event Gallery";
}


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.8.2/css/lightbox.min.css">

<div class="photo-gallery">
    <div class="container">
        <div class="intro">
            <h2 class="text-center">Events Gallery</h2>
        </div>
        <div class="row photos">
            @foreach (var image in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3 item">
                    <a href="@image.ImageUrl" data-lightbox="photos">
                        <img class="img-fluid" src="@image.ImageUrl" style="height:310px;width:310px">
                    </a>
                </div>

            }
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.8.2/js/lightbox.min.js"></script>
