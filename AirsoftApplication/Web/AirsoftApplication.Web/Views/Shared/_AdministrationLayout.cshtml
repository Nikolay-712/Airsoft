<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/argon.css?v=1.2.0" type="text/css">
</head>
<body>
    <nav class="sidenav navbar navbar-vertical  fixed-left  navbar-expand-xs navbar-light bg-white" id="sidenav-main">
        <div class="scrollbar-inner">
            <!-- Brand -->
            <div class="sidenav-header  align-items-center">
                <a class="navbar-brand justify-content-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <div style="font-size: 50px; color:cornflowerblue">
                        <i class="fab fa-battle-net"></i>
                    </div>
                </a>
            </div>
            <div class="navbar-inner">
                <!-- Collapse -->
                <div class="collapse navbar-collapse" id="sidenav-collapse-main">
                    <!-- Nav items -->
                    <ul class="navbar-nav">

                        <li class="nav-item">
                            <a class="nav-link" asp-action="CreateEvent">
                                <i class="fas fa-bullhorn text-primary"></i>
                                <span class="nav-link-text">Event</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="AllProducts">
                                <i class="fab fa-shopify text-yellow"></i>

                                <span class="nav-link-text">Products</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="AllUsersInfo">
                                <i class="far fa-address-card text-green"></i>
                                <span class="nav-link-text">Tables</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="AddProduct">
                                <i class="fas fa-dolly-flatbed text-info"></i>
                                <span class="nav-link-text">Add product</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="examples/register.html">
                                <i class="ni ni-circle-08 text-pink"></i>
                                <span class="nav-link-text">Register</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="examples/upgrade.html">
                                <i class="fab fa-amazon-pay"></i>
                                <span class="nav-link-text">Upgrade</span>
                            </a>
                        </li>
                    </ul>
                    <!-- Divider -->
                    <hr class="my-3">
                    <!-- Heading -->
                    <h6 class="navbar-heading p-0 text-muted">
                        <span class="docs-normal">Documentation</span>
                    </h6>
                </div>
            </div>
        </div>
    </nav>

    <div class="main-content" id="panel">
        <div class="container">
            <partial name="_CookieConsentPartial" />
            <main role="main" class="pb-3">
                @this.RenderBody()
            </main>
        </div>
    </div>
</body>
</html>
