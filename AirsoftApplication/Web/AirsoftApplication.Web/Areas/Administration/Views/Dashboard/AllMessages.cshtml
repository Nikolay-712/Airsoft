@model IEnumerable<AirsoftApplication.Web.ViewModels.Administration.Contacts.MessageViewModel>

<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Tables</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a asp-action="Index">Dashboards</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Messages</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a href="#" class="btn btn-sm btn-neutral">New</a>
                    <a asp-controller="Dashboard" asp-action="AllMessages" class="btn btn-sm btn-neutral">
                        <i class="fas fa-bell"></i>  Messages
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="col-md-12">
    <div class="table-responsive">
        <table class="table align-items-center table-flush">
            <thead class="thead-light">
                <tr>
                    <th scope="col" class="sort" data-sort="sendOn">Send on</th>
                    <th scope="col" class="sort" data-sort="email">Email</th>
                    <th scope="col" class="sort" data-sort="username">Username</th>
                    <th scope="col" class="sort" data-sort="subject">Subject</th>
                    <th scope="col" class="sort" data-sort="content">Content</th>
                    <th scope="col" class="sort" data-sort="status">Status</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            @foreach (var message in Model)
            {
                <tbody class="list">
                    <tr>
                        <th scope="row">
                            <div class="media align-items-center">
                                <div class="media-body">
                                    <span class="sendon mb-0 text-sm">@message.CreatedOn</span>
                                </div>
                            </div>
                        </th>

                        <th scope="row">
                            <div class="media align-items-center">
                                <div class="media-body">
                                    <span class="email mb-0 text-sm">@message.Email</span>
                                </div>
                            </div>
                        </th>
                        <th scope="row">
                            <div class="media align-items-center">
                                <div class="media-body">
                                    <span class="username mb-0 text-sm">@message.Username</span>
                                </div>
                            </div>
                        </th>
                        <th scope="row">
                            <div class="media align-items-center">
                                <div class="media-body">
                                    <span class="subject mb-0 text-sm">@message.Subject</span>
                                </div>
                            </div>
                        </th>
                        <th>
                            <div class="media align-items-center">
                                <div class="media-body">
                                    <a class="nav-link active" aria-current="page" asp-action="MessageById" asp-route-messageId="@message.Id">Content</a>
                                </div>
                            </div>
                        </th>
                        <th scope="row">
                            <div class="media align-items-center">
                                <div class="media-body">
                                    @if (message.HasBeenRead)
                                    {
                                        <span class="badge badge-dot mr-4">
                                            <i class="bg-success"></i>
                                            <span class="status">answered </span>
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-dot mr-4">
                                            <i class="bg-warning"></i>
                                            <span class="status">not answered  </span>
                                        </span>
                                    }


                                    <span class="status mb-0 text-sm"></span>
                                </div>
                            </div>
                        </th>
                    </tr>
                </tbody>
            }
        </table>
    </div>
</div>