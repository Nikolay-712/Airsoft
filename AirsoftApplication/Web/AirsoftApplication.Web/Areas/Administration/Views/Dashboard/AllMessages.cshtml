@model AirsoftApplication.Web.ViewModels.Administration.Contacts.AllMessagesViewModel

<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Messages Center</h6>
                    <nav aria-label="breadcrumb" class="d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboards</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Messages</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-sm-2 col-5 text-right">
                    <a asp-controller="Dashboard" asp-action="AllMessages" class="btn btn-sm btn-neutral">
                        <i class="fas fa-bell"></i> Messages
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0">Messages</h3>
                </div>
                <!-- Light table -->
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col" class="sort" data-sort="date">Date</th>
                                <th scope="col" class="sort" data-sort="username">Username</th>
                                <th scope="col" class="sort" data-sort="email">Email</th>
                                <th scope="col" class="sort" data-sort="subject">Subject</th>
                                <th scope="col" class="sort" data-sort="content">Content</th>
                                <th scope="col" class="sort" data-sort="status">Status</th>
                            </tr>
                        </thead>
                        <tbody class="list">
                            @foreach (var message in Model.Messages)
                            {
                                <tr>
                                    <th scope="row">
                                        <div class="media align-items-center">
                                            <div class="media-body">
                                                <span class="name mb-0 text-sm">@message.CreatedOn</span>
                                            </div>
                                        </div>
                                    </th>
                                    <th scope="row">
                                        <div class="media align-items-center">
                                            <div class="media-body">
                                                <span class="name mb-0 text-sm">@message.Username</span>
                                            </div>
                                        </div>
                                    </th>
                                    <th scope="row">
                                        <div class="media align-items-center">
                                            <div class="media-body">
                                                <span class="name mb-0 text-sm">@message.Email</span>
                                            </div>
                                        </div>
                                    </th>
                                    <th scope="row">
                                        <div class="media align-items-center">
                                            <div class="media-body">
                                                <span class="name mb-0 text-sm">@message.Subject</span>
                                            </div>
                                        </div>
                                    </th>
                                    <th scope="row">
                                        <div class="media align-items-center">
                                            <a asp-action="MessageById" asp-controller="Dashboard" asp-route-messageId="@message.Id">
                                                <div class="media-body">
                                                    <span class="name mb-0 text-sm">Content</span>
                                                </div>
                                            </a>
                                        </div>
                                    </th>
                                    <td>
                                        @if (message.HasBeenRead)
                                        {
                                            <span class="badge badge-dot mr-4">
                                                <i class="bg-green"></i>
                                                <span class="status"> </span>
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-dot mr-4">
                                                <i class="bg-red"></i>
                                                <span class="status"></span>
                                            </span>
                                        }
                                    </td>
                                    <td>
                                    </td>
                                </tr>
                            }
                    </table>
                    <br />
                    <partial name="_PagingPartial" model="@Model" />
                </div>
            </div>
        </div>
    </div>
</div>


