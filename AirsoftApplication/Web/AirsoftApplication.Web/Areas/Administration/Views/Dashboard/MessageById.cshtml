@model AirsoftApplication.Web.ViewModels.Administration.Contacts.MessageViewModel

<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0"></h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboards</a></li>
                            <li class="breadcrumb-item"><a asp-action="AllMessages">Messages</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Return Answer</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a asp-area="" asp-controller="Contacts" asp-action="Index" class="btn btn-sm btn-neutral">New</a>
                    <a asp-controller="Dashboard" asp-action="AllMessages" class="btn btn-sm btn-neutral">
                        <i class="fas fa-bell"></i> All Messages
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container-fluid mt--6">
    <div class="row">
        <div class="col-xl-6 order-xl-2">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h3 class="mb-0">Message content </h3>
                        </div>
                    </div>
                </div>
                <div class="card-body pt-0">
                    <div class="row">
                    </div>
                    <div class="text-center">
                        <h5 class="h3">
                            @Model.Username <span class="font-weight-light"></span>
                        </h5>
                        <div class="h5 font-weight-300">
                            <i class="ni location_pin mr-2"></i>@Model.Email
                        </div>
                    </div>
                </div>
                <p class="mt-3 mb-0 text-lg text-center">
                    @Model.Content
                </p>
            </div>
        </div>
        <div class="col-xl-6 order-xl-1">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h3 class="mb-0">Return answer </h3>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-controller="Messages" asp-action="ReturnAnswer" enctype="multipart/form-data">
                        <div class="form-group">
                            <input type="hidden" asp-for="Id" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input type="hidden" asp-for="Email" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="MessageSubject" class="control-label">Subject</label>
                            <input asp-for="MessageSubject" class="form-control" />
                            <span asp-validation-for="MessageSubject" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MessageContent" class="control-label">Message</label>
                            <textarea rows="5" asp-for="MessageContent" class="form-control"></textarea>
                            <span asp-validation-for="MessageContent" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Send" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
