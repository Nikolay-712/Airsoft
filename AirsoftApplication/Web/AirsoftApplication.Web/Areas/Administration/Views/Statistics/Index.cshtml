@model AirsoftApplication.Web.ViewModels.Administration.Statistics.StatisticViewModel

@{
    ViewData["Title"] = "Event Control";
}

<h1>Add Statistic</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control">
                    @foreach (var user in Model.Users)
                    {
                        <option value="@user.UserId">@user.PlayerName</option>
                    }
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GunEnergy" class="control-label"></label>
                <input type="number" asp-for="GunEnergy" class="form-control" />
                <span asp-validation-for="GunEnergy" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="hidden" asp-for="EventId" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}


